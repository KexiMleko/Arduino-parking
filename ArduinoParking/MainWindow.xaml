<Window x:Class="ArduinoParking.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Parking Finder" Height="600" Width="800">
    <Window.Resources>
        <Style x:Key="ParkingButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="250"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10" 
                                BorderThickness="1">
                            <ContentPresenter 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45a049"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="#F0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button 
            Content="Nađi Slobodan Parking" 
            x:Name="btnNadjiParking"
            Click="BtnNadjiParking_Click"
            Style="{StaticResource ParkingButtonStyle}"
            Margin="20"
            Grid.Row="0"/>

        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto">
            <WrapPanel 
                x:Name="wrapPanelParkings" 
                HorizontalAlignment="Center">
                <!-- Ovde će se dinamički dodavati parking kartice -->
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</Window>